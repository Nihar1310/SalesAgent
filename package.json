{
  "name": "sales-quotation-memory",
  "version": "1.0.0",
  "description": "Gmail-aware sales quotation memory system",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "jest",
    "migrate": "node server/migrations/migrate.js",
    "import:historical": "node server/scripts/importHistoricalEmails.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fuse.js": "^7.1.0",
    "googleapis": "^126.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "openai": "^6.8.1",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "sales",
    "quotation",
    "gmail",
    "pricing"
  ],
  "author": "",
  "license": "ISC"
}
